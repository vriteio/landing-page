---
import "#styles/base.css";
import "@fontsource/nunito";
import "@fontsource/nunito/500.css";
import "@fontsource/nunito/600.css";
import "@fontsource/nunito/700.css";
import "@fontsource/nunito/800.css";
import "@fontsource/nunito/900.css";
import { FrameHeadline } from "#components/fragments/frame-headline";
import BaseHead from "#components/fragments/base-head.astro";

const image = "https://vrite.io/meta-image.png";
const title = "Vrite Ôºç headless CMS for technical content";
const description =
  "Dedicated headless Content Management System (CMS) for technical content, like programming blogs, documentation, and more.";

export const prerender = true;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      description={description}
      title={title}
      image={image}
      analytics={false}
    />
  </head>
  <body class="overflow-hidden overscroll-none">
    <main
      class="flex flex-col items-center justify-center gap-8 p-4 pb-0 bg-white dark:bg-black"
    >
      <div
        class="h-[100vh] w-full flex justify-center items-start max-w-screen-xl"
      >
        <div
          class="sticky top-0 flex flex-col-reverse items-center justify-center w-full h-screen -mt-16 md:flex-row max-w-screen-2xl"
        >
          <div
            class="w-[60rem] h-full max-w-full flex flex-1 flex-col justify-start items-start overflow-hidden"
          >
            <FrameHeadline class="h-full" client:visible />
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
