---
import { Header } from "#components/fragments/header";
import { Headline } from "#components/fragments/headline";
import { Footer } from "#components/fragments/footer";
import { EditorSection } from "#components/fragments/editor-section";
import { HeadlineImage } from "#components/fragments/headline-image";
import { EmailModal } from "#components/fragments/email-modal";
import { OverviewSection } from "#components/fragments/overview-section";
import { DashboardSection } from "#components/fragments/dashboard-section";
import { ScalabilitySection } from "#components/fragments/scalability-section";
import { EmailCard } from "#components/fragments/email-card";
import BaseHead from "#components/fragments/base-head.astro";

const image = "https://vrite.io/meta-image.png";
const title = "Vrite Ôºç headless CMS for technical content";
const description =
  "Dedicated headless Content Management System (CMS) for technical content, like programming blogs, documentation, and more.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead description={description} title={title} image={image} />
  </head>
  <body class="overflow-x-hidden overscroll-none">
    <main
      class="flex flex-col items-center justify-center gap-8 p-4 pb-0 bg-gray-100 dark:bg-gray-800"
    >
      <div
        class="h-[100vh] w-full flex justify-center items-start max-w-screen-xl"
      >
        <Header client:idle />
        <div
          class="sticky top-0 flex flex-col-reverse items-center justify-center w-full h-screen -mt-16 md:flex-row max-w-screen-2xl"
        >
          <div
            class="w-[60rem] max-w-full flex flex-1 flex-col justify-start items-start"
          >
            <Headline client:idle />
          </div><HeadlineImage client:idle />
        </div>

        <div class="icon-scroll"></div>
      </div>
      <OverviewSection client:load />
      <EditorSection client:idle />
      <DashboardSection client:idle />
      <ScalabilitySection client:idle />
      <EmailCard client:idle />
      <Footer client:idle />
      <EmailModal client:load />
    </main>
  </body>
</html>
